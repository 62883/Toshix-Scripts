--  üñåÔ∏è GUI CONSTRUCTION

local gui = Instance.new("ScreenGui") gui.Name           = "Executor" gui.IgnoreGuiInset = true gui.ResetOnSpawn   = false gui.Parent         = playerGui

-- UIScale responsive -------------------------------------------------------- local uiScale = Instance.new("UIScale", gui) uiScale.Scale = math.clamp(workspace.CurrentCamera.ViewportSize.Y / 1080, 0.85, 1.1)

-- Bottom‚Äësheet main frame ---------------------------------------------------- local frame = Instance.new("Frame") frame.Size               = UDim2.fromScale(0.9, 0.55) frame.Position           = UDim2.fromScale(0.5, 1.2) frame.AnchorPoint        = Vector2.new(0.5, 1) frame.BackgroundColor3   = COLORS.bg frame.BorderSizePixel    = 0 frame.Parent             = gui

local corner = Instance.new("UICorner", frame) corner.CornerRadius       = UDim.new(0, 18)

local stroke = Instance.new("UIStroke", frame) stroke.Color              = Color3.fromRGB(60,60,90) stroke.Thickness          = 1 stroke.ApplyStrokeMode    = Enum.ApplyStrokeMode.Border

-- Header (drag handle) ------------------------------------------------------- local header = Instance.new("TextLabel") header.Size              = UDim2.new(1,0,0,48) header.BackgroundColor3  = COLORS.headerA header.BorderSizePixel   = 0 header.Text              = "GUI Toshiro ‚Äì Executor" header.TextColor3        = Color3.new(1,1,1) header.Font              = Enum.Font.GothamBold header.TextSize          = 20 header.Parent            = frame

local headerGrad = Instance.new("UIGradient", header) headerGrad.Color = ColorSequence.new({ ColorSequenceKeypoint.new(0, COLORS.headerA), ColorSequenceKeypoint.new(1, COLORS.headerB), })

local headerCorner = Instance.new("UICorner", header) headerCorner.CornerRadius = UDim.new(0,18)

-- Handle bar (visual cue) ---------------------------------------------------- local handle = Instance.new("Frame") handle.Size              = UDim2.new(0,60,0,6) handle.Position          = UDim2.new(0.5,-30,0,6) handle.BackgroundColor3  = Color3.fromRGB(200,200,200) handle.BackgroundTransparency = 0.3 handle.BorderSizePixel   = 0 handle.Parent            = header

local handleCorner = Instance.new("UICorner", handle) handleCorner.CornerRadius = UDim.new(1,0)

-- Scroll area --------------------------------------------------------------- local scroll = Instance.new("ScrollingFrame") scroll.Size              = UDim2.new(1,-20,1,-64) scroll.Position          = UDim2.new(0,10,0,54) scroll.BackgroundTransparency = 1 scroll.BorderSizePixel   = 0 scroll.ScrollBarThickness = 6 scroll.ScrollBarImageColor3 = Color3.fromRGB(150,150,150) scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y scroll.Parent            = frame

local list = Instance.new("UIListLayout", scroll) list.Padding              = UDim.new(0,12) list.SortOrder            = Enum.SortOrder.LayoutOrder


---

--  üéõÔ∏è DRAGGING (handle + header) ‚Äì mobile friendly

local dragging, startY, startPos local function beginDrag(input) if input.UserInputType ~= Enum.UserInputType.Touch and input.UserInputType ~= Enum.UserInputType.MouseButton1 then return end dragging = true startY   = input.Position.Y startPos = frame.Position input.Changed:Connect(function(prop) if prop == "UserInputState" and input.UserInputState == Enum.UserInputState.End then dragging = false end end) end local function doDrag(input) if not dragging then return end local deltaY = (input.Position.Y - startY) local newY   = startPos.Y.Offset + deltaY frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset, startPos.Y.Scale, newY) end header.InputBegan:Connect(beginDrag) handle.InputBegan:Connect(beginDrag) header.InputChanged:Connect(doDrag) UserInputService.InputChanged:Connect(doDrag)


---

--  üì£ Notify helper

local function notify(title, text, dur) pcall(StarterGui.SetCore, StarterGui, "SendNotification", { Title = title, Text = text, Duration = dur or 4 }) end


---

--  üîò BUTTON FACTORY

local function makeBtn(data) local btn = Instance.new("TextButton") btn.Size              = UDim2.new(1,-14,0,50) btn.BackgroundColor3  = data.discord and COLORS.discordI or COLORS.btnIdle btn.Text              = string.format("  %s  %s", data.emoji or "", data.name) btn.TextColor3        = COLORS.text btn.Font              = Enum.Font.Gotham btn.TextSize          = 20 btn.BorderSizePixel   = 0 btn.TextXAlignment    = Enum.TextXAlignment.Center btn.Parent            = scroll

local btnCorner = Instance.new("UICorner", btn)
btnCorner.CornerRadius = UDim.new(0,12)

local hoverIn  = TweenService:Create(btn, TweenInfo.new(0.15), {BackgroundColor3 = data.discord and COLORS.discordH or COLORS.btnHover})
local hoverOut = TweenService:Create(btn, TweenInfo.new(0.15), {BackgroundColor3 = data.discord and COLORS.discordI or COLORS.btnIdle})

btn.MouseEnter:Connect(function() hoverIn:Play() end)
btn.MouseLeave:Connect(function() hoverOut:Play() end)
btn.TouchTap:Connect(function() hoverIn:Play(); task.delay(0.25, function() hoverOut:Play() end) end)

btn.Activated:Connect(function()
    if data.discord then
        pcall(setclipboard, DISCORD_LINK)
        notify("Discord", "Enlace copiado ‚úÖ", 3)
        return
    end

    local ok, err = true, nil
    if data.url then
        ok, err = pcall(function()
            loadstring(game:HttpGet(data.url))()
        end)
    elseif data.action then
        ok, err = pcall(data.action)
    end

    if ok then
        notify("Ejecutado", data.name .. " ‚úÖ", 3)
    else
        notify("Error", tostring(err), 5)
        warn("[Executor] Error: ".. tostring(err))
    end
end)

end

for _,info in ipairs(BUTTONS) do makeBtn(info) end


---

--  ‚ùå CLOSE ‚Üí minimise to floating bubble

local close = Instance.new("TextButton") close.Size             = UDim2.new(0,30,0,30) close.Position         = UDim2.new(1,-38,0,9) close.BackgroundColor3 = COLORS.danger close.Text             = "‚úï" close.TextColor3       = Color3.new(1,1,1) close.Font             = Enum.Font.GothamBold close.TextSize         = 20 close.BorderSizePixel  = 0 close.Parent           = header

local closeCorner = Instance.new("UICorner", close) closeCorner.CornerRadius = UDim.new(1,0)

local reopen -- forward ref local function showFrame(show) if show then frame.Visible = true TweenService:Create(frame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Position = UDim2.fromScale(0.5, 0.88)}):Play() if reopen then reopen.Visible = false end else TweenService:Create(frame, TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.In), {Position = UDim2.fromScale(0.5, 1.2)}):Play() task.delay(0.22, function() frame.Visible = false; if reopen then reopen.Visible = true end end) end end close.Activated:Connect(function() showFrame(false) end)

-- Bubble -------------------------------------------------------------------- reopen = Instance.new("TextButton") reopen.Size             = UDim2.new(0,80,0,80) reopen.Position         = UDim2.new(0.05,0,0.78,0) reopen.BackgroundColor3 = COLORS.headerA reopen.Text             = "GUI\nToshiro" reopen.TextWrapped      = true reopen.TextColor3       = Color3.new(1,1,1) reopen.Font             = Enum.Font.GothamBold reopen.TextSize         = 18 reopen.BorderSizePixel  = 0 reopen.Visible          = false reopen.Parent           = gui

local reopenCorner = Instance.new("UICorner", reopen) reopenCorner.CornerRadius = UDim.new(1,0)

local reopenGrad = Instance.new("UIGradient", reopen) reopenGrad.Color = headerGrad.Color

reopen.Activated:Connect(function() showFrame(true) end)


---

--  üöÄ INITIAL ANIMATION

showFrame(true)

    
