--  üìú SCRIPT REGISTRY (edit me!)

local BUTTONS = { {name="Servidor de Discord", emoji="üì°", discord=true }, {name="Fisch",             emoji="üêü", url="https://raw.githubusercontent.com/62883/Toshix-Scripts/refs/heads/main/Fisch"}, {name="Last to leave",     emoji="üèÜ", url="https://raw.githubusercontent.com/62883/Toshix-Scripts/refs/heads/main/Last%20to%20leave.txt"}, {name="Npc or die",        emoji="üíÄ", url="https://raw.githubusercontent.com/62883/Toshix-Scripts/refs/heads/main/npc.lua"}, {name="Dead Rails",        emoji="üöÇ", url="https://raw.githubusercontent.com/62883/Toshix-Scripts/refs/heads/main/Dead%20Rails.lua.txt"}, {name="Obby for ugc",      emoji="üèÖ", action=function() warn("Obby pr√≥ximamente ‚ú®") end}, {name="Rebirths Ultimate", emoji="üîÑ", url="https://raw.githubusercontent.com/62883/Toshix-Scripts/refs/heads/main/Rebirths%20Ultimate.txt"}, } local DISCORD_LINK = "https://discord.gg/BvFuNRg5"


