--  üé® STYLE CONSTANTS

local COLORS = { bg        = Color3.fromRGB(25, 25, 35), headerA   = Color3.fromRGB(90, 130, 255), -- gradient start headerB   = Color3.fromRGB(120, 255, 170),-- gradient end text      = Color3.fromRGB(240, 210, 130), accent    = Color3.fromRGB(120, 255, 170), btnIdle   = Color3.fromRGB(50, 50, 80), btnHover  = Color3.fromRGB(70, 70, 110), discordI  = Color3.fromRGB(65, 60, 105), discordH  = Color3.fromRGB(85, 80, 130), danger    = Color3.fromRGB(255, 90, 90), }


